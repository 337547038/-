#!/usr/bin/env node
const init = require('../lib/init.js');
const build = require('../lib/build.js');
const watch = require('../lib/watch.js');
const server = require('../lib/server.js');
const program = require('commander');
program
.command('init')
.alias('i')
.description('')
.action(function (name) {
  init();
  //process.exit(0);
});
program
.command('build')
.alias('b')
.description('')
.action(function () {
  build();
  //process.exit(0);
});
program
.command('server')
.alias('s')
.description('')
.action(function () {
  server();
  // process.exit(0);
});
program
.command('watch')
.alias('w')
.description('')
.action(function () {
  watch();
  //process.exit(0);
});
program.parse(process.argv);
